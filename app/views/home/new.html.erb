<h1>Home#new</h1>
<h2>강의 추가하기</h2>
<p>Find me in app/views/home/new.html.erb</p>

<div class="container">
    <form action="/home/create" method="POST" enctype='multipart/form-data'>
      <div class="form-group">
        <label for="InputLectureName">강의명</label>
        <input type="text" name="name" class="form-control" id="InputLectureName" placeholder="강의명을 입력하세요">
      </div>
      <div class="form-group">
        <label for="InputLectureMajor">전공</label>
        <input type="text" name="major" class="form-control" id="InputLectureMajor" placeholder="전공을 입력하세요">
      </div>
      <div class="form-group">
        <label for="InputLectureProfessor">담당교수</label>
        <input type="text" name="professor" class="form-control" id="exampleInputProfessor" placeholder="담당교수를 입력하세요">
      </div>
      <div class="form-group">
        <label for="InputLectureContent">강의내용</label>
        <textarea class="form-control" name="content" id="InputLectureContent" rows="7"></textarea>
      </div>
      
      <input type="file" name="file">
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>